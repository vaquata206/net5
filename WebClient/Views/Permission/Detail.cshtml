@model WebClient.Core.Entities.Permission;
@{
    ViewData["Title"] = "Thông tin quyền";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-default">
                    <div class="card-header">
                        <h3 class="card-title">Quyền</h3>
                    </div>
                    <div class="card-body">
                        <form class="form-horizontal" validate="true" show-loader="true" method="post" action="/permission/detail">
                            @Html.AntiForgeryToken()
                            <div class="form-group row">
                                <label for="inputPermission" class="col-sm-2 col-form-label">Mã Quyền:</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(Model => Model.Ma_Quyen, new { @class = "form-control", id = "inputPermission", disabled = true })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputName" class="col-sm-2 col-form-label">Tên Quyền:</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(Model => Model.Ten_Quyen, new { @class = "form-control", id = "inputName", required = "required", maxlength = 50 })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="inputNote" class="col-sm-2 col-form-label">Ghi chú:</label>
                                <div class="col-sm-10">
                                    @Html.TextAreaFor(Model => Model.Ghi_Chu, new { @class = "form-control", id = "inputNote", rows = 4, maxlength = 100 })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <a href="/Permission/list" class="btn btn-default">
                                        <i class="fas fa-arrow-left"></i>
                                        Quay về
                                    </a>
                                    <button type="submit" class="btn btn-primary float-right">
                                        <i class="far fa-save"></i>
                                        Lưu
                                    </button>
                                </div>
                            </div>
                            <div>
                                <input type="hidden" name="Id_Quyen" value="@(Model!=null?Model.Id_Quyen:0)" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

