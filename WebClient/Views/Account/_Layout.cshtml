@using Microsoft.Extensions.Localization
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <environment include="Development">
        <!-- Font Awesome -->
        <link rel="stylesheet" href="/node_modules/admin-lte/plugins/fontawesome-free/css/all.min.css">
        <!-- icheck bootstrap -->
        <link rel="stylesheet" href="/node_modules/admin-lte/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
        <!-- Theme style -->
        <link rel="stylesheet" href="/node_modules/admin-lte/dist/css/adminlte.min.css">
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="/css/main.min.css?v=@AppSetting.ResourceVersion" />
    </environment>
    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" href="/sites/css/default.css">

</head>
<body class="hold-transition login-page">

    <div class="split left bg-page">
        <div class="section transheader homepage">
            <div class="text-center">
                <h2>@localizer["BAN QUẢN LÝ KHU CÔNG NGHỆ CAO"]</h2>
                <h2>@localizer["VÀ CÁC KHU CÔNG NGHIỆP ĐÀ NẴNG"]</h2>
            </div>
        </div>
    </div>

    <div class="split right">
        <div class="transheader headerTitle">
            <div class="col-md-12 col-md-offset-1 col-sm-12 text-center">
                <h2>@localizer["KHU CÔNG NGHỆ CAO ĐÀ NẴNG"]</h2>
            </div>
        </div>
        <div class="login-box">
            <div class="">
                @RenderBody()
            </div>
        </div>
    </div>

    <environment include="Development">
        <!-- jQuery -->
        <script src="/node_modules/admin-lte/plugins/jquery/jquery.min.js"></script>
        <!-- Bootstrap 4 -->
        <script src="/node_modules/admin-lte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- AdminLTE App -->
        <script src="/node_modules/admin-lte/dist/js/adminlte.min.js"></script>
        <script src="/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="/js/main.min.js?v=@AppSetting.ResourceVersion"></script>
    </environment>
    <script src="/js/site.js?v=@AppSetting.ResourceVersion"></script>
    <script src="/js/ValidateAuto.js?v=@AppSetting.ResourceVersion"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
